#
# Docksal/Fin Aliases
#
alias f='fin'
alias fd='fin drush'
alias fdr='fin drush cr'
alias fe='fin exec'

#
# Drush Aliases
#
alias dr='drush'
alias den='drush en'
alias dis='drush pm-uninstall'
alias dca='drush cc all'
alias dcd='drush cc drush'
alias dfra='drush fra -y'
alias drr='drush rr'
alias dfr='drush fr -y'
alias dfd='drush fd -y'
alias dfu='drush fu'
alias badass='dcd && drr && dcd && dfra && dca'
alias smartass='dcd && drr && drush updb -y && dcd && dfra && dca'
alias dencssjs='drush vset preprocess_css 1 --yes && drush vset preprocess_js 1 --yes'
alias discssjs='drush vset preprocess_css 0 --yes && drush vset preprocess_js 0 --yes'
alias dentdebug='drush vset theme_debug 1 && dca'
alias distdebug='drush vset theme_debug 0 && dca'
alias denmessages='drush vset -y error_level 1'
alias dismessages='drush vset -y error_level 0'
alias .build='./build.sh'
alias .install='./install.sh'
alias dropsql='dr sql-drop'
alias ddr='ddr'

#
# Git Aliases
#
alias gs='git stash'
alias gsa='git stash apply'
alias gsp='git stash pop'
alias gcm='gm -m'
alias gfp='git format-patch -1'
alias gds='git diff --staged'
alias gplo='git pull origin'
alias gpo='git push origin'
alias gpa='git push --all'
alias grs='git reset'
alias gutd='gfa && git pull'
alias gcln='gclean'
alias gdm='git branch --merged >/tmp/merged-branches && vi /tmp/merged-branches && xargs git branch -d </tmp/merged-branches'
alias gbdate='git for-each-ref --sort="-authordate:iso8601" --format=" %(authordate:iso8601)%09%(refname)" refs/heads'
alias gpc='gc -m "Post:Commit - Adding Linting Fixes"'

#
# Shortcuts
#
alias y='yarn'
alias ya='yarn add'
alias yad='yarn add -D'
alias yag='yarn global add'
alias ys='yarn start'
alias yb='yarn build'
alias yr='yarn release'
alias yl='yarn lint'
alias sb='serve -s build'
alias rsy='rsync -av --progress'
alias n='netlify'
alias ns='netlify status'
alias ni='netlify init'
alias nd='netlify deploy'

#
# Patch
#
alias pth='patch -p1 <'

#
# NPM Aliases
#
alias nrw='npm run watch'
alias nins='npm install'

#
# Trash Replacer (Depending on rmtrash)
#
alias trash="rmtrash"
alias del="rmtrash"

#
# Utilities
#
alias listen="sudo lsof -PiTCP -sTCP:LISTEN"

#
# MySQL
#
alias loaddump='mysql -uroot -p'

#
# Controllers
#
alias rmacdock='killall -KILL Dock'
alias solr-start='daemon --chdir='/usr/local/Cellar/solr/4.7.0/libexec/example' --command "java -Dsolr.solr.home=multicore -jar start.jar" --respawn --output=/var/log/solr/solr.log --name=solr --verbose'
alias solr-stop='daemon --stop --name=solr  --verbose'

#
# ImageMagick
#
alias imgcmprs='convert -strip -interlace Plane -quality 70%'

# PhpSwapper
alias swap-php71='brew unlink php54 && brew unlink php56 && brew unlink php71 && brew link php71'
alias swap-php54='brew unlink php54 && brew unlink php56 && brew unlink php71 && brew link php54'

# Apache
alias apache-start='sudo apachectl -k start'
alias apache-restart='sudo apachectl -k restart'
alias apache-stop='sudo apachectl -k stop'

# MySQL
alias mysql-start='brew services start mysql'
alias mysql-restart='brew services restart mysql'
alias mysql-stop='brew services stop mysql'

#
# Functions
#
function ddr() {
  docker-compose exec php drush "$@"
}
